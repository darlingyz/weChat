/* distribution/Apply/Apply.wxss */
page{
  background-color: #fff;
}
.imgs{
  width: 100%;
  height: 300rpx;
  display: block;
}
.Sea{
  color: #4f9788;
}
.yuanFen{
  width: 98rpx;
}
.outer{
   padding: 44rpx 40rpx;
   border-bottom: 1px solid #e7e7e7;
}
.left{
  flex: 1;
  -webkit-flex:1;
 line-height: 35rpx;
}
.left view:first-child{
  font-size: 30rpx;
  margin-bottom: 15rpx;
}
.left view:last-child{
  font-size: 24rpx;
  color: #8b8a8a;
}
.right{
  display: flex;
  display: -webkit-flex;
  align-items: center;
  -webkit-align-items:center;
  justify-content: center;
  -webkit-justify-content: center;
  margin-left: 80rpx;
}

.title{
  align-items: center;
  -webkit-align-items:center;
  color: #74c8bc;
  padding:30rpx 48rpx;
}
.xian{
  height: 33rpx;
  width: 4rpx;
  background-color: #74c8bc;
  margin-right: 15rpx;
}
.xinMin{
  align-items: center;
  -webkit-align-items:center;
  padding: 0 52rpx 0 67rpx;
  margin-bottom: 26rpx;
  font-size: 26rpx;
  color: #000;
}
.name{
  flex: 1;
  -webkit-flex:1;
  border:1px solid #e7e7e7;
  margin-left: 21rpx;
  height: 65rpx;
  padding-left: 20rpx;
}
.btn{
  position: fixed;
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  background-color: #74c8bc;
  bottom: 0;
  left: 0;
  border-radius: 0;
}
.btn::after{
  border-radius:0;
}